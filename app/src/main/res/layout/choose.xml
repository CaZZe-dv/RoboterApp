<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <RadioGroup
            android:layout_width="343dp"
            android:layout_height="114dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:checkedButton="@id/Controller"
            android:id="@+id/radioGroup" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.45">
        <RadioButton
                android:text="Programme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/Programms"/>
        <RadioButton
                android:text="Controller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/Controller"/>
    </RadioGroup>
    <Button
            android:text="Auswählen"
            android:layout_width="246dp"
            android:layout_height="63dp" android:id="@+id/ChooseButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.859"/>
    <TextView
            android:text="Wählen Sie einen der Modis aus!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            android:textSize="24sp" android:textColor="#FFFFFF" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintVertical_bias="0.133"/>
    <TextView
            android:layout_width="274dp"
            android:layout_height="67dp" android:id="@+id/Tooltip"
            android:textSize="18sp"
            android:text="Mit diesem Modus wird der Roboter gesteuert" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.107" android:gravity="clip_vertical|center_horizontal"
            android:textColor="#FFFFFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>