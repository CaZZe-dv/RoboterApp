<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="In Grundposition fahren"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/homeButton"/>
        <TextView
                android:text="Delay Einstellen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView10" android:textSize="24sp"
                android:textColor="#FFFFFF"/>
        <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/Delay" android:max="80"/>
    </LinearLayout>
</RelativeLayout>