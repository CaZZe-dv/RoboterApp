<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conLayout_programme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".programme.liste.ProgrammeFragment">

    <ImageButton
        android:id="@+id/btn_programme_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?android:selectableItemBackground"
        android:src="?attr/homeAsUpIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_programme_titel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Programme"
        app:layout_constraintBottom_toTopOf="@+id/listView_programme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_programme_back"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listView_programme"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_programme_back">

    </ListView>
</androidx.constraintlayout.widget.ConstraintLayout>