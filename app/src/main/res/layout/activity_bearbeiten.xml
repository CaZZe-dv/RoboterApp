<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSaveProgrammActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_save"
        app:layout_constraintBottom_toTopOf="@+id/btnAddPunktActivity"
        app:layout_constraintEnd_toEndOf="parent" />

    <SeekBar
        android:id="@+id/axisGeschwindigkeit_ProgrammeActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:max="30"
        android:progress="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/joystickRechts"
        app:layout_constraintStart_toEndOf="@+id/joystickLinks" />

    <ImageButton
        android:id="@+id/btnBearbeitenBackActivity"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?android:selectableItemBackground"
        android:src="?attr/homeAsUpIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnBearbeitenSwitchActivity"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_reset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBearbeitenBackActivity" />

    <ImageButton
        android:id="@+id/btnBearbeitenHomeActivity"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBearbeitenSwitchActivity" />

    <ImageButton
        android:id="@+id/btnBearbeitenSleepActivity"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00FFFFFF"
        android:src="@android:drawable/ic_menu_more"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBearbeitenHomeActivity" />

    <TextView
        android:id="@+id/textViewBearbeitenNameActivity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/btnBearbeitenBackActivity"
        app:layout_constraintEnd_toStartOf="@+id/listViewPunkteActivity"
        app:layout_constraintStart_toEndOf="@+id/btnBearbeitenBackActivity"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddPunktActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Neuer Punkt"
        app:layout_constraintBottom_toTopOf="@+id/textViewDelayActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/listViewPunkteActivity" />

    <EditText
        android:id="@+id/textViewDelayActivity"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Delay(ms)"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:saveEnabled="false"
        app:layout_constraintBottom_toTopOf="@+id/joystickRechts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/listViewPunkteActivity" />

    <RelativeLayout
        android:id="@+id/joystickRechts"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/joystickLinks"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"></RelativeLayout>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Geschwindigkeit"
        app:layout_constraintBottom_toTopOf="@+id/axisGeschwindigkeit_ProgrammeActivity"
        app:layout_constraintEnd_toStartOf="@+id/joystickRechts"
        app:layout_constraintStart_toEndOf="@+id/joystickLinks"
        tools:text="Geschwindigkeit" />

    <ListView
        android:id="@+id/listViewPunkteActivity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textView17"
        app:layout_constraintEnd_toStartOf="@+id/joystickRechts"
        app:layout_constraintStart_toEndOf="@+id/joystickLinks"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>